<table class='table'>
 <% if users.exists? %>
  <thead>
    <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>    
      <% users.each do |user| %>
         <tr>
           <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
           <td><%= user.name %></td>
           <td>フォロー数: <%= user.followed.count %></td>
           <td>フォロワー数: <%= user.follower.count %></td>
           <td><%= link_to 'Show', user %></td>
         </tr>
      <% end %>
 <% else %>  
       <p>ユーザーはいません</p>
 <% end %>
    
  </tbody>
</table>
 
